<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_nav_graph"
    app:startDestination="@id/libraryFragment">

    <!-- 1) Library screen -->
    <fragment
        android:id="@+id/libraryFragment"
        android:name="com.example.homelibrary.ui.home.LibraryFragment"
        android:label="Library">

        <!-- Action из LibraryFragment → bookDetailFragment -->
        <action
            android:id="@+id/action_library_to_bookDetail"
            app:destination="@id/bookDetailFragment" />
    </fragment>

    <!-- 2) Profile screen -->
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.example.homelibrary.ui.home.ProfileFragment"
        android:label="Profile" />

    <!-- 3) Вот он, «детальный» экран книги, объявлен напрямую внутри bottom_nav_graph -->
    <fragment
        android:id="@+id/bookDetailFragment"
        android:name="com.example.homelibrary.ui.book.BookDetailFragment"
        android:label="Book Detail">

        <argument
            android:name="bookId"
            app:argType="string" />
    </fragment>
</navigation>
